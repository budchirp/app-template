root = true

[*]
charset              = utf-8
end_of_line          = lf
indent_size          = 4
indent_style         = space
insert_final_newline = false
max_line_length      = 100
tab_width            = 4

[*.{kt,kts}]
ktlint_code_style                                 = compose
ktlint_function_naming_ignore_when_annotated_with = Composable